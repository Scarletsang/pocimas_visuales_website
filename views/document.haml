!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "UTF-8"}/
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}/
    %meta{:name => "author", :content => "Anthony Tsang"}/
    %meta{:name => "description", :content => description}/
    %meta{:property => "og:site_name", :content => og_site_name}/
    %meta{:property => "og:url", :content => og_url}/
    %meta{:property => "og:title", :content => og_title}/
    %meta{:property => "og:description", :content => og_description}/
    %meta{:property => "og:type", :content => "website"}/
    %meta{:property => "og:image", :content => og_image_url}/
    %meta{:property => "og:image:type", :content => "img/#{og_image_format}"}/
    %meta{:property => "og:image:width", :content => og_image_width}/
    %meta{:property => "og:image:height", :content => og_image_height}/
    %link{:href => "img/favicon.ico", :rel => "icon", :type => "image/x-icon"}/
    - css_files.each do |css_name|
      %link{:href => "css/#{css_name}", :rel => "stylesheet"}
    - js_files.each do |js_name|
      %script{:src => "js/#{js_name}", :type => "module"}
    %title= title
  %body.main-view
    %img#cover{:src => cover_image_url}
    %nav.center-menu
      #website-icon
        #website-icon-image
        #website-icon-text
          %h1 Pócima Visual 02_
          %h1 estando aquí no estoy estoy
          %hr
          %h1
            Escuela de espiritismo tecnológico
      #lesson-list
      %button#start-btn{:type => "button"}
        %h1= start_btn_text
    %main.center-menu
      %button#next-lesson-btn{:type => "button"}
        %h1= next_lesson_btn_text
    #popup.hide
      %object#popup-pdf
      %img#popup-image
      %p#popup-image-text
      %button#close-popup-btn{:type => "button"}
        %img{:src => "img/close-popup-btn.svg"}/
    #cache{:style => "display: none;"}
    %template
      - nodes.each do |node|
        = node